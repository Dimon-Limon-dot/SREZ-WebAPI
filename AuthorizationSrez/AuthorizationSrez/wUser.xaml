<Window x:Class="AuthorizationSrez.wUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthorizationSrez"
        mc:Ignorable="d"
        Title="" Height="500" Width="400">
    <Grid>
        <Image Source="Resources\man.png" Height="180" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <StackPanel HorizontalAlignment="Center" Margin="0,190,0,0">
            <TextBlock Text="Добро пожаловать!" FontSize="24"/>
            <TextBlock x:Name="tbSurname" Margin="0,13,0,0" FontSize="18"/>
            <TextBlock x:Name="tbName" Margin="0,13,0,0" FontSize="18"/>
            <TextBlock x:Name="tbMiddleName" Margin="0,13,0,0" FontSize="18"/>
        </StackPanel>
        <Button x:Name="btnExit" Content="Выход" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="18" Width="200" Margin="0,0,0,15" Click="btnExit_Click"/>
    </Grid>
</Window>
